#
# THIS FILE EXISTS PRIMARILY FOR UNIT TESTING PURPOSES
# Should extend .env from ALL APIs
#
API_ROOT_DIR=/app
API_PORT=4000
API_URL=http://localhost:4000
APP_ID=<your-app-id>
CRYPT_KEY=<your-secure-crypt-key>
DEBUG=true
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=<your-secure-access-secret>
JWT_REFRESH_SECRET=<your-secure-refresh-secret>
MAXMIND_GEOIP_DB_PATH=geoip/GeoLite2-City.mmdb
NODE_ENV=development
OTP_SALT=<your-secure-otp-salt>
POSTGRES_URI=postgres://pguser:password@postgres:5432/dx3
REDIS_PORT=6379
REDIS_URL=redis://redis
S3_ACCESS_KEY_ID=local
# Use http://minio:9000 when API runs in Docker; http://localhost:9000 when API runs on host
S3_ENDPOINT=http://localhost:9000
S3_PROVIDER=minio
S3_REGION=us-east-1
S3_SECRET_ACCESS_KEY=local123
SEED_USER_ADMIN_USERNAME=
SEED_USER_ADMIN_PASSWORD=
SEED_USER_SUPERADMIN_USERNAME=
SEED_USER_SUPERADMIN_PASSWORD=
SEED_USER_TEST_USERNAME=
SEED_USER_TEST_PASSWORD=
SENDGRID_API_KEY=<your-sendgrid-api-key>
# SENDGRID_API_KEY=SG.secret
# SENDGRID_API_USERNAME=
SENDGRID_URL=http://sendgrid:3000
SESSION_SECRET=SG.secret
TIMESCALE_ENABLED=false
# Set to 'true' to enable TimescaleDB logging
TIMESCALE_URI=postgresql://axuser:axpassword@ax-timescaledb:5432/ax_logs
TWILIO_ACCOUNT_SID=ANY-VALUE-HERE
TWILIO_AUTH_TOKEN=ANY-VALUE-HERE
UPLOAD_MAX_FILE_SIZE=200
WEB_APP_PORT=3000
WEB_APP_URL=http://localhost
