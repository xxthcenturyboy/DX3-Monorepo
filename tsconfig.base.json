{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@dx3/api-libs/*": ["packages/api/libs/*"],
      "@dx3/encryption": ["packages/shared/encryption/src/index.ts"],
      "@dx3/models-shared": ["packages/shared/models/src/index.ts"],
      "@dx3/test-data": ["packages/shared/test-data/src/index.ts"],
      "@dx3/utils-shared": ["packages/shared/utils/src/index.ts"],
      "@dx3/web-libs/*": ["packages/web/libs/*"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "tmp"]
}
